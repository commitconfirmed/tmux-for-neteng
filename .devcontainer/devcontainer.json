{
    "name": "Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            }
        },
            "extensions": [
                "ms-azuretools.vscode-docker"
            ]
    },
    "mounts": [
        "source=${localWorkspaceFolder}/example-bashrc.txt,target=/root/.bashrc,type=bind",
    ],
    "postCreateCommand": [ 
        "uname -a",
        "echo 'Development container is ready!'"
    ]
}