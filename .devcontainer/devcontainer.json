{
    "name": "TMUX For Network Engineers example",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.shell.linux": "/bin/bash"
            }
        },
            "extensions": [
                "ms-azuretools.vscode-docker",
                "vscode.git"
            ]
    },
    "postCreateCommand": [ 
        "mkdir log",
        "cat example-bashrc.txt >> ~/.bashrc",
        "cp .tmux.conf ~/.tmux.conf",
        "source ~/.bashrc"
    ]
}